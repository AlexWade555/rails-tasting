<%= render 'shared/navbar' %>

<div>
<br><br><br><br><br>
  <h1 style="text-align:center">Lessons available</h1>
  <div class="container-cards">
      <% @lessons.each do |lesson| %>
        <div class="card-index mb-3">
          <%= cl_image_tag lesson.photo.key %>
          <div class="card-index-infos">
            <div>
              <h2><%= lesson.title %></h2>
              <p><%= lesson.category %></p>
              <p><%= lesson.description %></p>
              <p><%= link_to "Details", lesson_path(lesson), class: "btn btn-gradient"%></p>
            </div>
            <div>
              <h2 class="card-index-rating"><%= "$#{lesson.price}" %></h2>
              <p class="card-index-rating"><%= "â˜… #{lesson.rating}" %></p>
              <p><%= link_to "Sessions", lesson_sessions_path(lesson), class: "btn btn-gradient"%></p>
            </div>

              <% if !current_user.nil? %>
                <% if lesson.user.avatar.present? %>
                  <%= image_tag lesson.user.avatar, class: "card-index-user avatar-bordered" %>
                <% else %>
                    <%= image_tag "https://res.cloudinary.com/fantastic-four/image/upload/v1646222179/development/5gcjh4kw0fvinmnk97ihx41v3v0a.gif",class: "card-index-user avatar-bordered" %>
              <% end %>
              <% end %>
            <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-index-user avatar-bordered" /> %>
          </div>
        </div>
      <% end %>
  </div>
</div>

<%= link_to "Create a new lesson", new_lesson_path, class: "btn btn-gradient" %>
<% if false %>
<%# avatar image tag for current user %>
  <% if !current_user.nil? %>
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, class: "card-index-user avatar-bordered" %>
    <% else %>
      <%= image_tag "https://res.cloudinary.com/fantastic-four/image/upload/v1646191493/development/mf6nwfathzuc8uptro4lrjpn8woa.png", class: "card-index-user avatar-bordered" %>
    <% end %>
  <% end %>
<% end %>
<%# avatar image tag end %>
