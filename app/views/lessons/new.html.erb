<h1>Create a new lesson</h1>
<%= simple_form_for @lesson do |f| %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :rating %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :user_id, prompt: 'Select a user' %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
<% end %>
<%= link_to "Back", lessons_path %>
