<%= render 'shared/navbar' %>

<div class="learnit-center">
<h1 class="page-header">Create a new session for <%= @lesson.title %></h1>
<%= simple_form_for([ @lesson, @session ]) do |f| %>
  <%= f.input :schedule, as: :datetime, html5: true %>
  <%= f.association :lesson %>
  <%= f.input :user_id %>
  <%= f.submit "Submit session" %>
<% end %>
</div>
