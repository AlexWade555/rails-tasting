  <% if current_user.nil? %>
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, class: "avatar dropdown-toggle" %>
      <% else %>
      <%= image_tag "https://res.cloudinary.com/fantastic-four/image/upload/v1646191493/development/mf6nwfathzuc8uptro4lrjpn8woa.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
